<div class='panel list'>
    <div class='panel-heading'>
      <h4> Chatboxes </h4>
    </div>

    <% if (events[4].length <= 0 ) { %>
      <div>
        <p>You have not chat available.</p>
      </div>
    <% } else { %>
      <% events[4].forEach( (chatbox) => { %>
        <div>
          <% if (chatbox.firstuser.equals(user.id)) {%>
            <div>
              <a href='/user/member/<%= chatbox.seconduser._id %>'>
                <img src='<%=cloudinary.url(chatbox.seconduser.avatar, { width: 50, height: 50, crop: 'fill', gravity: 'face', radius: 'max' })%>'></img>
              </a>
              <form  class='pull-right' action='/user/message' method='POST'>
                <input name='id' hidden value='<%=chatbox.seconduser._id%>'>
                <button class='glyphicon glyphicon-envelope'></button>
              </form>
              <p>
                <strong><%= chatbox.seconduser.name%></strong>
                  <% if (events[5].length > 0){ %>
                    <span class='label label-danger'> unread </span>
                  <% } %>
              </p>
            </div>
          <% } else { %>
            <div>
              <a href='/user/member/<%= chatbox.firstuser._id %>'>
                <img src='<%=cloudinary.url(chatbox.firstuser.avatar, { width: 50, height: 50, crop: 'fill', gravity: 'face', radius: 'max' })%>'></img>
              </a>
              <form  class='pull-right' action='/user/message' method='POST'>
                <input name='id' hidden value='<%=chatbox.firstuser._id%>'>
                <button class='glyphicon glyphicon-envelope'></button>
              </form>
              <p>
                <strong><%= chatbox.firstuser.name%></strong>
                <% if (events[5].length > 0){ %>
                  <span class='label label-danger'> unread </span>
                <% } %>
              </p>
            </div>
          <% } %>
        </div>
    <% }) %>
  <% } %>
</div>
