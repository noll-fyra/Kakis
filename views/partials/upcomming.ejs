<div class='panel half-height'>
  <div class='panel-heading'>
    <h4>Upcoming Events</h4>
  </div>

  <hr>

  <div class='list'>
    <% if (events[2].length <= 0) {%>
      <div class='panel'>
        <p> You have not start any event yet. </p>
        <a href='/event/new'> Start Your own event now<a>
      </div>
    <% } else { %>
      <% events[2].forEach( (participation)=> { %>
        <% if (participation.event === null) { %>
          <% return %>
        <% } %>

        <div class='col-md-12'>
          <p class='pull-left'>
            <%= dateShow(participation.event.startDate) %>
            <strong><%= participation.event.name %></strong>

            <% if (participation.event.category !== null) { %>
              <span class='label label-success'><%= participation.event.category%></span>
            <% } %>

            <% if (dateCheck(participation.event.startDate)) { %>
              <span class='label label-danger'>Today</span>
            <% } %>
          </p>

          <a class='pull-right' href='/event/<%= participation.event._id%>'>View</a>
        </div>
      <% }) %>
    <% } %>
  </div>
</div>
